<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragmenteducation_relativelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--ScollView用来显示不规则 并且长度多于屏幕的内容 ListView用来显示规则列表内容-->
    <!--RecycleView是ListView的升级版-->

    <!--SwipeRefreshLayout上拉下拉刷新 start-->
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/fragmenteducation_swiperefreshlo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <!--Recyclerview 视频列表 start-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragmenteducation_recyclerview"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <!--视频组件 start 通过适配器添加-->
            <!--视频组件 end 通过适配器添加-->

        </android.support.v7.widget.RecyclerView>
        <!--Recyclerview 视频列表 end-->

    </android.support.v4.widget.SwipeRefreshLayout>
    <!--SwipeRefreshLayout end-->
</RelativeLayout>